{
  "name": "vudesigner",
  "version": "0.2.0",
  "description": "efficient web-based-ui editor",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --win -p always"
  },
  "build": {
    "appId": "io.vudesigner.vudesigner",
    "productName": "VuDesigner",
    "npmArgs": "--production",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "freuwoert",
          "repo": "vudesigner"
        }
      ]
    },
    "nsis": {
      "runAfterFinish": false,
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "fileAssociations": [
    {
      "name": "VuDesigner VDD",
      "description": "VuDesigner Document",
      "ext": [
        "vdd"
      ]
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freuwoert/vudesigner.git"
  },
  "keywords": [
    "css",
    "html",
    "layout",
    "editor",
    "vudesigner"
  ],
  "author": "Maurice Freuw√∂rt",
  "license": "",
  "bugs": {
    "url": "https://github.com/freuwoert/vudesigner/issues"
  },
  "homepage": "https://github.com/freuwoert/vudesigner#readme",
  "dependencies": {
    "animejs": "^3.1.0",
    "color-convert": "^2.0.1",
    "electron-log": "^4.0.3",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.2.0",
    "emmet": "^2.0.0-rc.9",
    "fuse.js": "^3.4.6",
    "glob": "^7.1.6",
    "html2json": "^1.0.2",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "mousetrap": "^1.6.3",
    "path": "^0.12.7",
    "pretty": "^2.0.0",
    "prismjs": "^1.19.0",
    "vue": "^2.6.11",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
